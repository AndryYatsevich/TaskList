.listItem {
    border: 1px solid black;
    margin: 4px;
    border-radius: 10px;
    padding: 5px;
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.taskText {
    text-align: center;
    padding: 10px 0;
}
.done {
    text-decoration: line-through;
}

.taskBtn {
    display: inline-block;
}

li {
    list-style-type: none;
}